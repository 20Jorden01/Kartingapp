{% extends 'medewerker.html.twig' %}

{% block menu %}
    <li><a href="{{ path('activiteitenoverzicht') }}">home</a></li>
    <li><a href="{{ path('beheer') }}"><span class="badge">{{ activiteiten|length }}</span>beheer</a></li>
    <li class="active"><a href="{{ path('soortenbeheer') }}">soorten</a></li>
    <li><a href="{{ path('deelnemersbeheer') }}">deelnemers</a></li>
{% endblock %}
{% block content %}
    <section >
        <table class="table" style="table-layout: fixed">
            <caption>Dit zijn alle soorten activiteiten van het kartcentrum</caption>
            <thead>
            <tr>
                <td>Naam</td>
                <td>Min leeftijd</td>
                <td>tijdsduur</td>
                <td>prijs</td>
            </tr>
            </thead>
            <tbody>
            {% for activiteit in activiteiten %}
                <tr>
                    <td>
                        {{ activiteit.naam }}
                    </td>
                    <td>
                        {{ activiteit.minLeeftijd }}
                    </td>
                    <td>
                        {{ activiteit.tijdsduur }} min.
                    </td>
                    <td>
                        {{ activiteit.prijs }}
                    </td>
                    <td title="bewerk de gegevens van deze activiteit">


                        <a href="{{ path('updateSoort', {'id':activiteit.id}) }}" >
                            <span class="glyphicon glyphicon-pencil" style="color:red"></span>
                        </a>
                    </td>
                    <td title="verwijder deze activiteit is definitief">
                        <a href="{{ path('deleteSoort', {'id':activiteit.id}) }}" >
                            <span class="glyphicon glyphicon-minus" style="color:red"></span>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            <tr>
                <td colspan="6">
                    <a href="{{ path('soortenadd') }}">
                        <span class="glyphicon glyphicon-plus" style="color:red"></span>
                    </a>
                </td>

            </tr>

            </tbody>

        </table>


    </section>

{% endblock %}
